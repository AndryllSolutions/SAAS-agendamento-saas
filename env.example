# ============================================
# CONFIGURAÇÃO PARA ACESSO EXTERNO VIA NGROK
# ============================================

# URL Pública (Ngrok)
# Exemplo local: http://localhost:80
# Exemplo Ngrok: https://meuservico.ngrok-free.app
PUBLIC_URL=https://meuservico.ngrok-free.app

# URL da API
# Exemplo local: http://localhost:8000
# Exemplo Ngrok: https://meuservico.ngrok-free.app/api
API_URL=https://meuservico.ngrok-free.app/api

# URL do Frontend (Next.js)
# Exemplo local: http://localhost:3000
# Exemplo Ngrok: https://meuservico.ngrok-free.app
NEXT_PUBLIC_API_URL=https://meuservico.ngrok-free.app/api

# CORS Origins (separados por vírgula)
# Inclua todas as URLs que precisam acessar a API
CORS_ORIGIN=http://localhost:3000,https://*.ngrok-free.app,https://*.ngrok.io,https://meuservico.ngrok-free.app

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://agendamento:agendamento123@db:5432/agendamento_db

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://redis:6379/0

# ============================================
# RABBITMQ
# ============================================
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# ============================================
# SECURITY
# ============================================
SECRET_KEY=dev-secret-key-change-in-production-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# APPLICATION
# ============================================
APP_NAME=Agendamento SaaS
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# ============================================
# FRONTEND
# ============================================
FRONTEND_URL=http://localhost:3000

# ============================================
# EMAIL (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@agendamento.com
SMTP_FROM_NAME=Agendamento SaaS

# ============================================
# CELERY
# ============================================
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672/
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# SENTRY (Opcional)
# ============================================
SENTRY_DSN=

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60

# ============================================
# FILE UPLOAD
# ============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx

# ============================================
# BUSINESS SETTINGS
# ============================================
DEFAULT_APPOINTMENT_DURATION=60
CANCELLATION_DEADLINE_HOURS=24
BUSINESS_START_HOUR=8
BUSINESS_END_HOUR=20

