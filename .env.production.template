# Production Environment Variables for SAAS Agendamento System
# Copy this file to .env.production and update with your actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Application Security
SECRET_KEY=your_super_secret_key_at_least_32_characters_long
ENCRYPTION_KEY=your_encryption_key_32_characters_long

# CORS Configuration
CORS_ORIGINS=https://atendo.website,https://www.atendo.website
FRONTEND_URL=https://atendo.website
BACKEND_URL=https://72.62.138.239

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@atendo.website

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# WhatsApp Configuration
WHATSAPP_API_URL=https://api.evolution-api.com
WHATSAPP_API_TOKEN=your_evolution_api_token
WHATSAPP_PHONE_NUMBER=your_whatsapp_number
WHATSAPP_INSTANCE_NAME=atendo_instance

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=atendo-uploads

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_rabbitmq_password

# Google Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Application Settings
NODE_ENV=production
DEBUG=false
ENVIRONMENT=production
MAX_UPLOAD_SIZE=10485760

# Next.js Public Variables
NEXT_PUBLIC_API_URL=https://72.62.138.239
NEXT_PUBLIC_URL=https://atendo.website
NEXT_PUBLIC_APP_NAME=Atendo SaaS
NEXT_PUBLIC_APP_VERSION=1.0.0
